<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<installation version="1.0">
    <info>
        <appname>Czsem Mining Suite</appname>
        <appversion>1.3</appversion>
        <authors>
            <author email="dedekj@gmail.com" name="Jan Dedek"/>
        </authors>
        <url>http://czsem.berlios.de/</url>
        <uninstaller name="Uninstaller.jar" write="yes"/>
        <requiresjdk>no</requiresjdk>
        <writeinstallationinformation>no</writeinstallationinformation>
        <pack200/>
        <run-privileged condition="izpack.windowsinstall.vista|izpack.windowsinstall.7"/>
    </info>
    <guiprefs height="480" resizable="no" width="640">
        <modifier key="useFlags" value="yes"/>
        <modifier key="langDisplayType" value="default"/>
    </guiprefs>
    <locale>
        <langpack iso3="eng"/>
    </locale>
    <resources>
        <res id="shortcutSpec.xml" src="install_shortcutSpec.xml"/>
        <res id="Unix_shortcutSpec.xml" src="install_Unix_shortcutSpec.xml"/>
        <res id="userInputSpec.xml" src="install_userInputSpec.xml"/>
    </resources>
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="UserInputPanel"/>
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="ShortcutPanel"/>
        <panel classname="SimpleFinishPanel"/>
    </panels>
    <packs>
        <pack name="java binaries and configuration" preselected="yes" required="yes">
            <description/>
            <file override="update"
                src="C:\workspace\czsem\src\java\czsem\target\czsem-1.0.2-SNAPSHOT-jar-with-dependencies.zip" targetdir="$INSTALL_PATH/"/>
            <singlefile override="true"
                src="C:\workspace\czsem\src\java\czsem\src\izpack\czsem_config_install.xml" target="$INSTALL_PATH/czsem_config.xml"/>
            <parsable encoding="UTF8"
                targetfile="$INSTALL_PATH/czsem_config.xml" type="xml"/>
        </pack>
        <pack name="Weka integration" preselected="no" required="no">
            <description>Adds ILP classifier to Weka. Crisp ILP Classifier and Fuzzy ILP classifier can then be used inside the Weka (including GUI).</description>
            <file override="update"
                src="C:\workspace\czsem\src\netgraph\czsem\config.xml" targetdir="$INSTALL_PATH/"/>
            <file override="update"
                src="C:\workspace\czsem\src\netgraph\czsem\FuzzyILP.jar" targetdir="$INSTALL_PATH/"/>
            <file override="asktrue"
                src="C:\workspace\czsem\src\ILP\ILP_serial_projects" targetdir="$projects"/>
            <file override="asktrue"
                src="C:\workspace\czsem\src\netgraph\czsem\GenericPropertiesCreator.props" targetdir="$USER_HOME/"/>
            <parsable encoding="UTF-8"
                targetfile="$INSTALL_PATH/config.xml" type="xml"/>
        </pack>
    </packs>
    <native name="ShellLink.dll" type="izpack"/>
    <native name="ShellLink_x64.dll" type="izpack"/>
</installation>
